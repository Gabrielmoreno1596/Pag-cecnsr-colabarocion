# ================== Básico ==================
# No listar directorios
Options -Indexes

# Archivo por defecto
DirectoryIndex index.html

# ================== Canonical + HTTPS ==================
RewriteEngine On

# 1) Fuerza HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2) Fuerza dominio con WWW
RewriteCond %{HTTP_HOST} ^cecnsrosariosv\.com$ [NC]
RewriteRule ^ https://www.cecnsrosariosv.com%{REQUEST_URI} [L,R=301]

# ================== Errores (opcional) ==================
# ErrorDocument 404 /404.html

# ================== Caché ==================
# HTML: sin caché para ver cambios al instante
<IfModule mod_headers.c>
  <FilesMatch "\.(?:html?)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>

# Assets: caché largo (usa versionado en las URLs: app.v2.css, app.js?v=3, etc.)
<IfModule mod_expires.c>
  ExpiresActive On
  # Texto/estilos/scripts
  ExpiresByType text/css                           "access plus 1 year"
  ExpiresByType application/javascript             "access plus 1 year"
  ExpiresByType application/json                   "access plus 1 year"
  ExpiresByType text/javascript                    "access plus 1 year"
  # Imágenes
  ExpiresByType image/avif                         "access plus 1 year"
  ExpiresByType image/webp                         "access plus 1 year"
  ExpiresByType image/png                          "access plus 1 year"
  ExpiresByType image/jpeg                         "access plus 1 year"
  ExpiresByType image/gif                          "access plus 1 year"
  ExpiresByType image/svg+xml                      "access plus 1 year"
  ExpiresByType image/x-icon                       "access plus 1 year"
  # Fuentes
  ExpiresByType font/ttf                           "access plus 1 year"
  ExpiresByType font/otf                           "access plus 1 year"
  ExpiresByType font/woff                          "access plus 1 year"
  ExpiresByType font/woff2                         "access plus 1 year"
  # Fallback genérico
  ExpiresDefault                                   "access plus 1 week"
</IfModule>

# Marca como inmutable los assets estáticos (si cambias, cambia el nombre/versión)
<IfModule mod_headers.c>
  <FilesMatch "\.(?:css|js|png|jpe?g|gif|webp|avif|svg|ico|woff2?|ttf|otf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

